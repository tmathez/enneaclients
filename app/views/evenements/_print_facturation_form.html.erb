<h1 style="border-bottom:1px dotted #CCC;padding-bottom:5px;margin-bottom:5px;height:25px">
	Impression du chiffre d'affaire
</h1>
<div class="edit_event">
  <%=form_tag "/evenements/print_facturation", :method => :get do %>
  <div>
  	  <p style="margin-bottom:15px">
	  	<label style="display:block;float:left;width:50%">Responsable</label><%=select_tag "responsable", options_from_collection_for_select(@responsables,"id","prenom"), :include_blank => true, :style => "width:50%" %>
	  	<label style="display:block;float:left;width:50%;margin-top:5px">A facturer / Factur&eacute;</label>
	  	<div style="display:block;float:left;width:50%;margin-top:-10px">
	  		<%=select_tag "statut", "<option value='1'>A facturer</option><option value='2'>Factur√©</option>".html_safe, :include_blank => true, :style => "width:100%" %>
        </div>
	  	<label style="display:block;float:left;width:50%;margin-top:5px;font-size:1.2em">Dates</label>
	  	<div style="display:block;float:left;width:50%;margin-top:5px">
		  	<%= date_field "date_du", nil, nil, :style => "width:43%", :placeholder => "Du" %>
		  	<%= date_field "date_au", nil, nil, :style => "width:43%", :placeholder => "Au" %>
	  	</div>
	  </p>
  </div>
  <hr/>
  <p class="footer">
    <%= submit_tag 'Imprimer' %> ou <%=link_to "Annuler", facturation_evenements_path %>
  </p>
  <% end %>
</div>