<tr>
	<td style="text-align:center"><%=offre.created_at.strftime("%d.%m.%Y") %></td>
	<td><%=offre.client_nom %></td>
	<td><%=offre.client_reference %></td>
	<td><%=offre.client_npa.to_s+" "+offre.client_lieu.to_s %></td>
	<td><%=offre.texte_string %></td>
	<td style="text-align:right;padding-right:5px"><%=format_number(offre.total_ttc,"'") %></td>
	<td style="text-align:center">
		<%= link_to '<img src="/images/edit.png" title="Modifier" />'.html_safe, edit_offre_path(offre) %>
	</td>
	<td style="text-align:center">
		<%= link_to '<img src="/images/print_mini.png" title="Imprimer" />'.html_safe, offre_path(offre,:format => "pdf"), :target => "_blank" %>
	</td>
	<td style="text-align:center;border-width:0">
		<%= link_to '<img src="/images/delete.gif" title="Supprimer" />'.html_safe, offre_path(offre), 
		    :confirm => 'Êtes-vous sûr de vouloir supprimer cette offre ?', :method => :delete %>
	</td>
</tr>
