<% if @mailing.termine %>
	$(".switch").attr('href', '<%=escape_javascript(mailing_path(@mailing, :done => false)) %>').animate({ backgroundPosition: '-83px 0px' }, 300);
	$(".show_when_done").fadeIn();
	$(".hide_when_done").fadeOut();
<% else %>
	$(".switch").attr('href', '<%=escape_javascript(mailing_path(@mailing, :done => true)) %>').animate({ backgroundPosition: '0px 0px' }, 300);
	$(".show_when_done").fadeOut();
	$(".hide_when_done").fadeIn();
<% end %>